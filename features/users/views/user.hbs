<div class="d-flex justify-content-between">
    <div>
        <h3 class="content-head">{{contentTitle}}</h3>
    </div>

    <div>
        <h4>
            <a class="btn btn-primary" style="margin-top: -9px;" href="#" data-toggle="modal" data-target="#new-crud"
                id="new-crud-btn">{{newCrudButton}}</a>
        </h4>
    </div>
</div>

<div class="content-body">
    <section id="basic-datatable">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-content">
                        <div class="card-body card-dashboard card-dt">
                            <div class="table-responsive">
                                <table class="table  zero-configuration table-striped">
                                    <thead>
                                        <tr>
                                            <th>Username</th>
                                            <th>User Role</th>
                                            <th>Creation Date</th>
                                            <th>Last Update</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each dataCrud}}
                                        <tr data-crud="{{json this}}">
                                            <td>{{username}}</td>
                                            <td>{{userRole}}</td>
                                            <td>{{formatDate createdAt  'MMM Do, YYYY'}}</td>
                                            <td>{{formatDate updateAt 'MMM Do, YYYY'}}</td>
                                            <td>
                                                <div class="dropdown dropdown-dt">
                                                    <button class="btn btn-outline-primary dropdown-toggle"
                                                        type="button" id="dropdownMenuButton" data-toggle="dropdown"
                                                        aria-haspopup="true" aria-expanded="false">
                                                        Select
                                                    </button>
                                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                                        <a class="btn-view dropdown-item" href="#" data-crudid="{{_id}}">View</a>
                                                        <a class="btn-edit dropdown-item" href="#" data-batchid="{{_id}}">Edit</a>
                                                        <a class="btn-delete dropdown-item" href="#">Delete</a>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<!-- ADD NEW MODAL -->
<div class="modal fade text-left" id="new-crud" tabindex="-1" role="dialog" aria-labelledby="myModalLabel1"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel1">{{newCrudTitleModal}}</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body p-3">
                <form action="/add/user" method="POST">
                    <div class="form-group row">
                        <label class="control-label col-md-3" for="username">Username:</label>
                        <div class="col-md-9">
                            <input type="text" id="username" name="username" class="form-control" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="control-label col-md-3" for="password">Password:</label>
                        <div class="col-md-9">
                            <input type="password" id="password" name="password" class="form-control" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="control-label col-md-3" for="user-role">User Role</label>
                        <div class="col-md-9">
                            <input type="text" id="user-role" name="userRole" class="form-control">
                        </div>
                    </div>
                    <div>
                        <div class="d-flex flex-row-reverse">
                            <div>
                                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Cancel</button>
                                <button type="submit" type="submit" class="btn btn-primary">Save</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<!-- VIEW DETAILS MODAL -->
<div class="modal fade text-left" id="view-crud" tabindex="-1" role="dialog" aria-labelledby="myModalLabel1"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel1">{{viewCrudTitleModal}}</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body p-3">
                <table class="table table-hover">
                    <tr>
                        <td><b>Username:</b></td>
                        <td id="username"></td>
                    </tr>
                    <tr>
                        <td><b>User Role:</b></td>
                        <td id="user-role"></td>
                    </tr>
                    <tr>
                        <td><b>Created At:</b></td>
                        <td id="created-at"></td>
                    </tr>
                    <tr>
                        <td><b>Last Updated:</b></td>
                        <td id="last-updated"></td>
                    </tr>
                </table>

                <br>
                <div class="d-flex flex-row-reverse">
                    <div id="edit-on-view-container">
                        <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Done</button>
                        <a class="btn btn-primary edit-on-view" href="#">Edit</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<!-- EDIT MODAL -->
<div class="modal fade text-left" id="update-crud" tabindex="-1" role="dialog" aria-labelledby="myModalLabel1"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel1">{{deleteCrudTitleModal}}</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body p-3">
                <form action="/edit/user/{{_id}}" method="POST">
                    <div class="form-group row">
                        <label class="control-label col-md-3" for="username">Username:</label>
                        <div class="col-md-9">
                            <input type="text" id="username" name="username" class="form-control" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="control-label col-md-3" for="password">Password</label>
                        <div class="col-md-9">
                            <input type="text" id="password" name="password" class="form-control" required>
                        </div>
                    </div>
                    <div>
                        <div class="d-flex flex-row-reverse">
                            <div>
                                <button type="button" class="btn btn-outline-secondary"
                                    data-dismiss="modal">Cancel</button>
                                <button type="submit" class="btn btn-primary">Update</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<!-- DELETE CONFIRMATION MODAL -->
<div class="modal fade text-left" id="delete-crud" tabindex="-1" role="dialog" aria-labelledby="myModalLabel1"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel1">Delete User</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body p-3">
                <p>Are you sure you want to permanently delete <b class="mark-crud"></b>?</p>
                <p>You can not undo this later.</p>
                <br>
                <div class="d-flex flex-row-reverse">
                    <div>
                        <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Cancel</button>
                        <a id="confirm-delete-btn" class="btn btn-primary" href="#">Delete</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

