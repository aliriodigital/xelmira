<div class="d-flex justify-content-between feature-header">
    <div>
        <h3 class="content-head d-inline">{{featureTitle}} </h3> <span> Â» {{course.name}}</span>
    </div>
</div>

<div class="content-body">
    <section class="mt-2" id="content-types">
        <div class="row match-height">

            <div class="col-xl-6 col-md-6 col-sm-12  mx-auto">
                <div class="card">
                    <div class="card-content">
                        <form action="/batch/import/course/{{course._id}}" method="POST">
                            <div class="card-body">
                                <h4 class="card-title">Batch List</h4>
                                <p class="card-text">Check the batches you want to import.</p>
                                <hr class="my-2">

                                {{#each batch}}
                                <ul class="list-unstyled mb-0">
                                    <li class="d-inline-block mr-2">
                                        <fieldset>
                                            <div class="vs-checkbox-con vs-checkbox-primary">
                                                <input type="checkbox" name="{{name}}" value="{{_id}}">
                                                <span class="vs-checkbox vs-checkbox-md">
                                                    <span class="vs-checkbox--check">
                                                        <i class="vs-icon feather icon-check"></i>
                                                    </span>
                                                </span>
                                                <span class="">{{name}}</span>
                                            </div>
                                        </fieldset>
                                    </li>
                                </ul>
                                {{/each}}
                            </div>

                            <div class="card-body">
                                <hr class="my-2">
                                <button type="submit" href="#" class="btn btn-primary">Import</button>
                                <a href="#" class="btn btn-danger">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>

    </section>
</div>