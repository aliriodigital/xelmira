<div class="d-flex justify-content-between feature-header">
    <div>
        <h3 class="content-head">{{featureTitle}}</h3>
    </div>

    <div>
        <h4>
            <a class="btn btn-primary" style="margin-top: -9px;" href="/course/new/form"
                id="new-crud-btn">New Course</a>
        </h4>
    </div>
</div>

<div class="content-body">
    <section id="basic-datatable">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-content">
                        <div class="card-body card-dashboard card-dt">
                            <div class="table-responsive">
                                <table class="table  zero-configuration table-striped">
                                    <thead>
                                        <tr>
                                            <th>Course Name</th>
                                            <th>Course Description</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each course}}
                                        <tr>
                                            <td>{{name}}</td>
                                            <td>{{description}}</td>
                                            <td>
                                                <div class="dropdown dropdown-dt">
                                                    <button class="btn btn-outline-primary dropdown-toggle"
                                                        type="button" id="dropdownMenuButton" data-toggle="dropdown"
                                                        aria-haspopup="true" aria-expanded="false">
                                                        Select
                                                    </button>
                                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                                        <a class="btn-edit dropdown-item" href="/course/edit/form/{{_id}}">Edit</a>
                                                        <a class="btn-delete dropdown-item"
                                                            href="/course/delete/{{_id}}">Delete</a>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>


